generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Priority {
  low
  medium
  high
  critical
}

enum TaskProgress {
  not_started
  in_progress
  done
}

enum ProjectRole {
  admin
  editor
  viewer
}

enum ActivityAction {
  create
  update
  delete
  move
  invite
  transfer
}

enum ActivityEntityType {
  task
  board
  project
  member
  resource
  status
}

model User {
  id                  String    @id @default(cuid())
  name                String?
  email               String?   @unique
  emailVerified       DateTime?
  image               String?
  password            String?
  onboardingCompleted Boolean   @default(false)
  teamSize            String?
  usagePurpose        String?
  industry            String?
  twoFactorEnabled    Boolean   @default(false)
  twoFactorSecret     String?
  dateFormat          String    @default("dd/MM/yyyy")
  isVirtual           Boolean   @default(false)
  resourceColor       String?
  resourceType        String?

  accounts      Account[]
  sessions      Session[]
  
  projectsOwned   Project[] @relation("ProjectOwner")
  projectMemberships ProjectMember[]
  projectStatuses ProjectStatus[]

  notificationSettings NotificationSettings?
  assignedTasks        Task[] @relation("TaskAssignees")
  passwordResetTokens  PasswordResetToken[]
  
  sSOSettings          SSOSettings?

  activityLogs         ActivityLog[]
}

model NotificationSettings {
  id               String  @id @default(cuid())
  userId           String  @unique
  user             User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  endDateTrigger   String  @default("1day")
  endDateEmail     Boolean @default(true)
  endDatePush      Boolean @default(true)
  
  deadlineTrigger  String  @default("1day")
  deadlineEmail    Boolean @default(true)
  deadlinePush     Boolean @default(true)
  
  startDateTrigger String  @default("1day")
  startDateEmail   Boolean @default(true)
  startDatePush    Boolean @default(true)
  
  mentionsEmail    Boolean @default(true)
  mentionsPush     Boolean @default(true)
  
  assignedEmail    Boolean @default(true)
  assignedPush     Boolean @default(true)
  
  commentsEmail    Boolean @default(true)
  commentsPush     Boolean @default(true)
  
  attachmentsEmail Boolean @default(true)
  attachmentsPush  Boolean @default(true)
  
  playSound        Boolean @default(true)
  marketingEmails  Boolean @default(true)
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId], map: "Account_userId_idx")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], map: "Session_userId_idx")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String   @unique
  tokenHash String
  expires   DateTime
  attempts  Int      @default(0)
  createdAt DateTime @default(now())

  userId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], map: "PasswordResetToken_userId_idx")
}

model Project {
  id        String   @id @default(cuid())
  name      String
  icon      String   @default("FaDiagramProject")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ownerId   String
  owner     User     @relation("ProjectOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  
  members   ProjectMember[]
  
  boards    Board[]
  activityLogs ActivityLog[]

  statusId  String?
  status    ProjectStatus? @relation(fields: [statusId], references: [id], onDelete: SetNull)
}

model ProjectMember {
  projectId String
  userId    String
  role      ProjectRole @default(editor)
  createdAt DateTime    @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([projectId, userId])
  @@index([userId], map: "ProjectMember_userId_idx")
}

model ProjectStatus {
  id        String   @id @default(cuid())
  name      String
  color     String
  isSystem  Boolean  @default(false)
  order     Int      @default(0)
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  projects  Project[]
  tasks     Task[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId], map: "ProjectStatus_userId_idx")
  @@index([userId, order], map: "ProjectStatus_userId_order_idx")
}

model Board {
  id        String   @id @default(cuid())
  name      String
  order     Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tasks     Task[]

  @@index([projectId], map: "Board_projectId_idx")
  @@index([projectId, order], map: "Board_projectId_order_idx")
}

model Task {
  id                    String          @id @default(cuid())
  title                 String
  description           String?         @db.Text
  priority              Priority        @default(low)
  progress              TaskProgress    @default(not_started)
  startDate             DateTime?
  dueDate               DateTime?
  cardDisplayPreference String          @default("none")
  order                 Float           @default(0)
  createdAt             DateTime        @default(now())
  updatedAt             DateTime        @updatedAt

  boardId   String
  board     Board     @relation(fields: [boardId], references: [id], onDelete: Cascade)
  
  statusId  String?
  status    ProjectStatus? @relation(fields: [statusId], references: [id], onDelete: SetNull)

  checklist ChecklistItem[]
  labels    Label[]
  
  assignees   User[]        @relation("TaskAssignees")
  attachments Attachment[]

  @@index([boardId], map: "Task_boardId_idx")
  @@index([boardId, order], map: "Task_boardId_order_idx")
  @@index([statusId], map: "Task_statusId_idx")
}

model ChecklistItem {
  id     String  @id @default(cuid())
  text   String
  isDone Boolean @default(false)
  taskId String
  task   Task    @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([taskId], map: "ChecklistItem_taskId_idx")
}

model Label {
  id     String @id @default(cuid())
  name   String
  color  String
  taskId String
  task   Task   @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([taskId], map: "Label_taskId_idx")
}

model Attachment {
  id        String   @id @default(cuid())
  name      String
  url       String   @db.Text
  type      String
  createdAt DateTime @default(now())
  
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([taskId], map: "Attachment_taskId_idx")
}

model SSOSettings {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  domain      String?
  ssoUrl      String?
  issuer      String?
  certificate String?  @db.Text
  forceSSO    Boolean  @default(false)
  isActive    Boolean  @default(true)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ActivityLog {
  id         String             @id @default(cuid())
  projectId  String
  actorId    String
  action     ActivityAction
  entityType ActivityEntityType
  entityId   String
  metadata   Json?
  createdAt  DateTime           @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  actor   User    @relation(fields: [actorId], references: [id], onDelete: Cascade)

  @@index([projectId, createdAt], map: "ActivityLog_projectId_createdAt_idx")
  @@index([actorId, createdAt], map: "ActivityLog_actorId_createdAt_idx")
  @@index([entityType, entityId], map: "ActivityLog_entity_idx")
}
