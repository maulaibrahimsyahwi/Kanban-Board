# Database
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DB?schema=public"
# Optional direct connection string for Prisma CLI (migrations, introspection)
DIRECT_URL=""

# Postgres client tuning (optional)
PG_POOL_MAX="5"
# auto|disable|no-verify|verify-full
PG_SSL_MODE="auto"

# NextAuth
AUTH_SECRET="replace-with-a-long-random-string"
AUTH_GOOGLE_ID=""
AUTH_GOOGLE_SECRET=""
NEXTAUTH_URL="http://localhost:3000"

# Email (password reset)
SMTP_EMAIL=""
SMTP_PASSWORD=""

# Supabase (realtime)
NEXT_PUBLIC_SUPABASE_URL=""
NEXT_PUBLIC_SUPABASE_ANON_KEY=""

# Sentry (optional)
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_SEND_DEFAULT_PII="false"
NEXT_PUBLIC_SENTRY_SEND_DEFAULT_PII="false"
SENTRY_ENABLE_LOGS="true"
NEXT_PUBLIC_SENTRY_ENABLE_LOGS="true"
NEXT_PUBLIC_SENTRY_ENABLE_REPLAY="false"

# SSO (optional)
BOXYHQ_ISSUER=""
BOXYHQ_API_KEY=""
SSO_CLIENT_SECRET=""

