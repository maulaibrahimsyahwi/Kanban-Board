# Database
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DB?schema=public"
# Optional direct connection string for Prisma CLI (migrations, introspection)
DIRECT_URL=""

# Postgres client tuning (optional)
PG_POOL_MAX="5"
# auto|disable|no-verify|verify-full
# NOTE: `no-verify` is for local debugging only. The app will refuse to run/build in production with `no-verify`.
PG_SSL_MODE="auto"
# Optional: override the bundled Supabase CA cert path
SUPABASE_CA_CERT_PATH=""

# Auth.js / NextAuth
AUTH_SECRET="replace-with-a-long-random-string"
AUTH_URL="http://localhost:3000"
AUTH_TRUST_HOST="true"
AUTH_GOOGLE_ID=""
AUTH_GOOGLE_SECRET=""
# Optional legacy (some integrations)
NEXTAUTH_URL="http://localhost:3000"

# Public (optional)
NEXT_PUBLIC_GITHUB_URL=""

# Redis (rate limiting)
# Strongly recommended in production (without Redis, limits are per-instance only).
REDIS_URL=""

# Field encryption (optional but recommended in production)
# REQUIRED in production if you enable 2FA (to avoid storing secrets in plaintext).
# - 64 hex chars, or base64 for 32 bytes (e.g. `openssl rand -base64 32`)
DATA_ENCRYPTION_KEY=""

# Email (password reset)
SMTP_EMAIL=""
SMTP_PASSWORD=""

# Supabase (Storage / admin operations)
SUPABASE_URL=""
SUPABASE_SERVICE_ROLE_KEY=""

# Realtime (Ably)
NEXT_PUBLIC_REALTIME_ENABLED="false"
ABLY_API_KEY=""

# Sentry (optional)
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_SEND_DEFAULT_PII="false"
NEXT_PUBLIC_SENTRY_SEND_DEFAULT_PII="false"
SENTRY_ENABLE_LOGS="true"
NEXT_PUBLIC_SENTRY_ENABLE_LOGS="true"
NEXT_PUBLIC_SENTRY_ENABLE_REPLAY="false"

# SSO (optional)
BOXYHQ_ISSUER=""
BOXYHQ_API_KEY=""
SSO_CLIENT_SECRET=""
